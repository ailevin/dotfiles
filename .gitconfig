[advice]
    statusHints = false

[color]
    ui = true

[core]
    editor = vim
    excludesfile = ~/.git_excludes

[github]
    user = jdavis

[help]
    autocorrect = 1

[init]
    templatedir = ~/.git_template

[user]
    name = Josh Davis
    email = josh@joshldavis.com

[push]
    default = matching

