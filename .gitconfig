[advice]
    statusHints = false
[color]
    ui = true
[core]
    editor = /usr/bin/vim
    excludesfile = ~/.gitignore
[github]
    user = jdavis
[help]
    autocorrect = 1
[init]
    templatedir = ~/.git_template
[user]
    name = Josh Davis
    email = davisjos@amazon.com
[alias]
    # Shortcuts
    a = add
    b = branch
    bl = blame
    c = commit -v
    cl = clone
    co = checkout
    d = diff
    dc = diff --cached
    f = fetch
    h = help
    l = log
    ls = ls-files
    m = merge
    r = remote
    rb = rebase
    re = reset
    rf = reflog
    rs = reset
    rv = revert
    s = status
    sh = show
    sl = shortlog
    sm = submodule
    st = stash
    su = status -uno
    un = reset HEAD

    # New Commands
    amend = commit --amend
    count = shortlog -sn
    ctags = !.git/hooks/ctags
    back = checkout HEAD~
    forward = checkout HEAD^
    graph = log --all --graph --decorate --oneline -n100
    dag = log --graph --decorate --all
    last = "log --pretty=format:'%h - %an, %ar : %s' HEAD~10..HEAD~"
    unstage = reset HEAD
    zip = !git ls-files | zip -@ "${PWD##*/}"-`date +%Y%m%d%H%M%S`
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

    # Found here: http://blog.pagebakers.nl/2009/01/29/git-ignoring-changes-in-tracked-files/
    # Thanks to http://github.com/zdwolfe for tweeting it.
    untrack = update-index --assume-unchanged
    track = update-index --no-assume-unchanged

    # Commands found online
    # http://blog.apiaxle.com/post/handy-git-tips-to-stop-you-getting-fired/
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "$stash@{0}"
    ours   = "!f() { git checkout --ours $@ && git add $@; }; f"
    theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
[amazon]
	append-cr-url = true
[push]
	default = simple
