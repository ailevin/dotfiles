[advice]
    statusHints = false
[user]
    name = Josh Davis
    email = josh@joshldavis.com
[github]
    user = jdavis
[core]
    editor = /usr/bin/vim
    excludesfile = ~/.gitignore
[help]
    autocorrect = 1
[color]
    ui = true
[alias]
    # Shortcuts
    a = add
    b = branch
    c = commit -v
    co = checkout
    d = diff
    dc = diff --cached
    f = fetch
    h = help
    l = log
    ls = ls-files
    r = remote
    rb = rebase
    re = reset
    rf = reflog
    rs = reset
    rv = revert
    s = status
    sl = shortlog
    sm = submodule
    st = stash
    su = status -uno
    un = reset HEAD

    # New Commands
    amend = commit --amend
    count = shortlog -sn
    back = checkout HEAD~
    forward = checkout HEAD^
    graph = log --all --graph --decorate --oneline -n100
    last = "log --pretty=format:'%h - %an, %ar : %s' HEAD~10..HEAD~"
    unstage = reset HEAD
    zip = !git ls-files | zip -@ "${PWD##*/}"-`date +%Y%m%d%H%M%S`
    
    # Commands found online
    # http://blog.apiaxle.com/post/handy-git-tips-to-stop-you-getting-fired/
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "$stash@{0}"
    ours   = "!f() { git checkout --ours $@ && git add $@; }; f"
    theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
[push]
	default = simple
[amazon]
	append-cr-url = true
